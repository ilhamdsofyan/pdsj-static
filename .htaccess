<IfModule mod_headers.c>
  # Basic security headers
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set X-XSS-Protection "1; mode=block"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  # HSTS (only applies when site is served over HTTPS)
  Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

# Content Security Policy: adjust hosts as needed

Header set Content-Security-Policy "default-src 'self' https: data:; img-src 'self' https: data:; font-src 'self' https://fonts.gstatic.com; style-src 'self' https://fonts.googleapis.com 'unsafe-inline' https://cdn.tailwindcss.com; script-src 'self' https://cdn.tailwindcss.com https://fonts.googleapis.com https://www.googletagmanager.com https://www.google-analytics.com 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https:;"
</IfModule>

# Deny access to dotfiles

<FilesMatch "^\.">
Require all denied
</FilesMatch>

# Default document

DirectoryIndex index.html

# Simple rewrite: try to serve folder/index.html for clean URLs

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^/]+)/?$ $1/index.html [L,QSA]
